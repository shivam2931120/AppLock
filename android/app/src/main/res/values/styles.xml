<resources>

    <!-- Base application theme (Dark mode) -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">#0A0A0A</item>
        <item name="android:statusBarColor">#0A0A0A</item>
        <item name="android:navigationBarColor">#0A0A0A</item>
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    </style>

    <!-- Transparent theme for lock screen overlay -->
    <style name="Theme.AppLock.Transparent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">#0A0A0A</item>
        <item name="android:statusBarColor">#0A0A0A</item>
        <item name="android:navigationBarColor">#0A0A0A</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>
